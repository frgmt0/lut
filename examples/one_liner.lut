-- Lüt One-Liner Example: Temperature Converter with Statistics
start_temp : 0 ;; end_temp : 100 ;; step : 10 ;; count : 0 ;; sum_f : 0 ;; max_f : -1000 ;; min_f : 1000;; print { 'Celsius to Fahrenheit Conversion Table' };; print { '---------------------------------' };; print { '  °C    |    °F   ' };; print { '---------------------------------' };; for { c : $start_temp, $c + $step, $c <= $end_temp } [ f : $c * 9 / 5 + 32;; count : $count + 1;; sum_f : $sum_f + $f;; max_f : $f > $max_f ? $f : $max_f;; min_f : $f < $min_f ? $f : $min_f;; print { ' ', $c, '°C   |   ', $f, '°F' } ];; print { '---------------------------------' };; avg_f : $sum_f / $count;; print { 'Statistics:' };; print { 'Average: ', $avg_f, '°F' };; print { 'Range: ', $max_f - $min_f, '°F' };; print { 'Min: ', $min_f, '°F, Max: ', $max_f, '°F' };; temp_status : $avg_f > 100 ? 'Hot climate' : 'Cool climate';; print { 'Climate status: ', $temp_status }
